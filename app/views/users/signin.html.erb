<% content_for :stylesheets do %>
<% end %>

<% content_for :scripts do %>
	<script type="text/javascript" src="/assets/users/signin.js"></script>
<% end %>

<% 
	@title = t 'user.view.signin.page_title'
%>

<div class="row">
	<form class="form col-md-4 col-md-offset-4" id="signin_form">
		<article class="box box-default">
			<section class="box-header with-border">
				<h2 class="box-title">
					<%= t 'user.view.signin.form_title' %>
					<small>hoặc <a href="/signup">đăng ký</a></small>
				</h2>
			</section>
			<section class="box-body">

				<% if defined? error %>
					<article class="callout callout-danger">
						<%= error %>
					</article>
				<% end %>

				<!-- Account name -->

				<article class="form-group">
					<label for="account"><%= t 'user.attribute.account' %></label>
					<div class="input-group">
						<div class="input-group-addon">
							<i class="fa fa-user"></i>
						</div>
						<input name="user[account]" data-constraint="required" type="text" class="form-control" id="account" autofocus />
					</div>
				</article>

				<!-- / Account name -->

				<!-- Password -->

				<article class="form-group">
					<label for="password"><%= t 'user.attribute.password' %></label>
					<div class="input-group">
						<div class="input-group-addon">
							<i class="fa fa-lock"></i>
						</div>
						<input name="user[password]" data-constraint="required" class="form-control" type="password" id="password" />
					</div>
				</article>

				<!-- / Password -->

				<!-- Remember -->

				<article class="form-group pull-left">
					<div class="checkbox no-margin">
						<label><input type="checkbox" name="remember" />Ghi nhớ</label>
					</div>
				</article>

				<article class="form-group pull-right">
					<a href="/users/forgot_password">Quên mật khẩu</a>
				</article>

				<!-- / Remember -->

				<div class="social-auth-links text-center">
	        <a aria-click="facebook_login" href="javascript:void(0)" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Đăng nhập bằng <b>Facebook</b></a>
	        <!-- <a href="javascript:void(0)" class="btn btn-block btn-social btn-google-plus btn-flat"><i class="fa fa-google-plus"></i> Đăng nhập bằng <b>Google+</b></a> -->
	      </div>

			</section>

		</article>	

		<!-- Button -->

		<article class="box box-solid">
			<section class="box-body row">
				<div class="margin-top-bottom-5 col-md-12">
					<button type="submit" class="btn btn-primary btn-block btn-flat animate-icon"><b><%= t 'user.view.signin.finish' %></b><span class="icon pull-right fa fa-sign-in"></span></button>
				</div>
			</section>
		</article>

		<!-- /Button -->

	</form>
</div>