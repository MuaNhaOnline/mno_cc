	<!-- start contact -->
	<section class="line-block contact container">
		<article class="title">
			<span>Thông tin liên lạc</span>
		</article>
		<article class="content information" style="padding: 0;">
			<div class="user-info row">
				<div class="col-xs-4 col-sm-2 avatar">
