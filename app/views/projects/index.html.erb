<!--start Search Box -->
<section class="search">
	<div class="search-box">
		<div class="title">
			<h3>Hãy để MuanhaOnline tìm dự án giúp bạn.</h3>
		</div>
		<form>
			<div class="tab">
				<label><input type="radio" name="typeTab"><i class="icon-32 icon-home-sale"></i><span>Dự án Bán</span></label>
				<label><input type="radio" name="typeTab"><i class="icon-32 icon-home-rent"></i><span>Dự án Thuê</span></label>
			</div>
			<div class="form-group-custom">
				<input type="text" class="form-control search-keyword" placeholder="... dự án tại Quận 2">
				<div class="btn-group history-search">
					<button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
						từ khóa
					</button>
					<ul class="dropdown-menu" role="menu">
						<li><a href="#">Từ khóa 01</a></li>
						<li><a href="#">Từ khóa 02</a></li>
						<li><a href="#">Từ khóa 03</a></li>
					</ul>
				</div>
				<div class="separator">
					<span>|</span>
				</div>
				<div class="btn-search">
					<button type="submit"></button>
					<div class="btn-more" data-function="show-search-plus">
						<span class="caret"></span>
					</div>
				</div>
			</div>			
			<section class="more-search" id="more_search" style="display:none">
				<div class="form-group-custom container-fluid">
					<div class="row">
						<div class="col-md-6 input-inline">
						<select class="form-control input-sm">
						<option>--Chọn thành phố/Tỉnh--</option>
						<option>Thành phố Hồ Chí Minh</option>
						<option>Hà Nội</option>
						<option>Bà Rịa - Vũng Tàu</option>
						</select>
						</div>
						<div class="col-md-6">
						<select class="form-control input-sm">
						<option>--Chọn quận/huyện--</option>
						<option>Quận 1</option>
						<option>Quận 5</option>
						</select>
						</div>
					</div>
				</div>
				<div class="form-group-custom">
					<select class="form-control input-sm">
						<option>--Chọn giá tiền--</option>
						<option>1 tỷ - 3 tỷ</option>
						<option>3 tỷ - 5 tỷ</option>
						<option>trên 5 tỷ</option>
					</select>
				</div>
				<div class="form-group-custom">
					<select class="form-control input-sm">
						<option>--Chọn diện tích--</option>
						<option>50m2 - 100m2</option>
						<option>100m2 - 200m2</option>
						<option>trên 200m2</option>
					</select>
				</div>
				<div class="form-group-custom container-fluid">
					<div class="row">
						<div class="col-md-6 input-inline">
							<select class="form-control input-sm">
								<option>--Chọn loại dự án--</option>
								<option>Dự án căn hộ liên kế</option>
								<option>Dự án biệt thự cao cấp</option>
								<option>Dự án nhà ở xã hội</option>
							</select>
						</div>
						<div class="col-md-6 input-inline">
							<select class="form-control input-sm">
								<option>--Chọn tình trạng dự án--</option>
								<option>Dự án đã hoàn thành</option>
								<option>Dự án đang hoàn thành</option>
							</select>
						</div>
					</div>
				</div>
				<div class="form-group">
					
				</div>
			</section>
			<div class="btn-plus">
				<button type="submit" class="btn btn-success btn-sm btn-search-plus">
					<img src="/assets/icon/search-plus.png">
					Tìm nâng cao
				</button>
				<button type="button" class="btn btn-success btn-sm" data-function="zestimate">Định giá khu vực này</button>
			</div>
		</form>
	</div>
</section>
<!-- end Search Box-->

<!-- start navigator -->
<section class="navigator container">
	<ol class="breadcrumb">
		<li><a href="/">Trang chủ</a></li>
		<li class="active">Danh sách dự án</li>
	</ol>
</section>
<!-- end navigator -->

<!-- start favorite-property -->
<section class="container block">
	<article class="title">
		<a href="#" class="link">
			<i class="fa fa-link"></i>
			<span>DỰ ÁN NỔI BẬT</span>
		</a>
	</article>
	<article class="content">
		<section class="slick favorite-projects">
			<div class="content">
				<% 
					projects = Project.search_with_params.limit 3
				%>
				<% projects.each do |p| %>
					<div class="item-lg">
						<div class="row">
							<div class="col-md-8 picture">
								<%= project_avatar p, style_class: 'thumbnail img-responsive', style: 'slide' %>
							</div>
							<div class="col-md-4">
								<div class="name">
									<%= p.title %>
								</div>
								<div class="status">							
									<% if p.display_deadline %>
										<i class="fa fa-circle done"></i>
										<span>Đã hoàn thành</span>
									<% else %>
										<i class="fa fa-circle working"></i>
										<span>Chưa hoàn thành</span>
									<% end %>
								</div>
								<div class="address">
									<i class="icon-16 icon-position"></i>
									<span><%= p.display_address %></span>
								</div>
								<% if p.unit_price_text.present? %>
									<div class="price">
										<i class="icon-16 icon-dollar"></i>
										<p class="number sale"><%= p.display_unit_price %></p>
									</div>
								<% end %>
								<div class="function">
									<a href="#" class="icon-favor" data-toggle="tooltip" data-placement="top" title="Lưu vào danh sách yêu thích"></a>
									<a href="#" class="icon-buy" data-toggle="tooltip" data-placement="top" title="Đăng ký mua"></a>
									<a href="#" class="icon-share" data-toggle="tooltip" data-placement="top" title="Chia sẽ tin này lên mạng xã hội"></a>
									<a href="#" class="icon-zestimate" data-toggle="tooltip" data-placement="top" title="Định giá căn nhà này"></a>
								</div>
								<div class="detail" data-dot>
									<%= plain_content p.description %>
								</div>
								<div class="btn-more">
									<a href="/projects/<%= p.id %>">Xem chi tiết</a>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
			<button class="slider-control prev" id="favor-prev"></button>
			<button class="slider-control next" id="favor-next"></button>
		</section>
		<section class="user-projects">		
			<!-- Nav tabs -->
			<ul class="nav nav-tabs" role="tablist">
				<li class="active">
					<a href="#suggest_property" role="tab" data-toggle="tab">
						Dự án có thể bạn quan tâm
					</a>
				</li>
				<li>
					<a href="#new_property" role="tab" data-toggle="tab">
						Dự án gần bạn nhất
					</a>
				</li>
				<li>
					<a href="#recently_action" role="tab" data-toggle="tab">
						Dự án tương tác gần đây
					</a>
				</li>
			</ul>
			<!-- end -->

			<!-- Tab panes -->
			<div class="tab-content">
				<div class="tab-pane fade in active" id="suggest_property">					
					<div class="row">
						<% 
							projects = Project.search_with_params.limit per
						%>
						<%= render partial: 'projects/item_list', locals: { projects: projects } %>
					</div>		
					<div class="link">
						<a href="#">Xem nhiều hơn</a>
					</div>
				</div>
				<div class="tab-pane fade" id="new_property">
					<div class="row">
						<% 
							projects = Project.search_with_params.limit per
						%>
						<%= render partial: 'projects/item_list', locals: { projects: projects } %>					
					</div>		
					<div class="link">
						<a href="#">Xem nhiều hơn</a>
					</div>
				</div>
				<div class="tab-pane fade" id="recently_action">
					<div class="row">
						<% 
							projects = Project.search_with_params.limit per
						%>
						<%= render partial: 'projects/item_list', locals: { projects: projects } %>				
					</div>		
					<div class="link">
						<a href="#">Xem nhiều hơn</a>
					</div>
				</div>
			</div>
			<!-- end -->
		</section>
	</article>
</section>
<!-- end favorite-property -->

