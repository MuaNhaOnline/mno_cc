<% 
=begin
	params: @project
=end

%>

<% content_for :stylesheets do %>
  <link rel="stylesheet" type="text/css" href="/assets/projects/create_details.css">
<% end %>

<% content_for :scripts do %>
  <script type="text/javascript" src="/assets/projects/create_details.js"></script>
  <script type="text/javascript">
  	project_id = <%= @project.id %>;
  </script>
<% end %>

<!-- Design -->

	<article class="create-details-container">
		<article class="select-description-container">
			<article class="close-popup"></article>
			<aricle class="select-description">

				<!-- Content -->

	        <article class="free-style-tab-container">
	        	<section class="tab-list horizontal-list-container text-left">
	        		<ul class="horizontal-list" id="group_description_list">
	        			<li class="horizontal-item active" aria-name="block">
	        				<a href="javascript:void(0)" aria-click="change_tab">Block</a>
	        			</li>
	        			<li class="horizontal-item" aria-name="real_estate">
	        				<a href="javascript:void(0)" aria-click="change_tab">Bất động sản</a>
	        			</li>
	        			<li class="horizontal-item" aria-name="text_image">
	        				<a href="javascript:void(0)" aria-click="change_tab">Mô tả <small>&amp;</small> hình ảnh</a>
	        			</li>
	        		</ul>
	        	</section>
	          <section class="tab-content-list">

		          <!-- Block -->

		          	<article class="tab-content" aria-name="block">
		          		<div class="row item-list" id="block_description_list">
		          		</div>
		          	</article>

		          <!-- / Block -->

		          <!-- Real-estate -->

		          	<article class="tab-content" aria-name="real_estate">
		          		<div class="row item-list" id="real_estate_description_list">
		          		</div>
		          	</article>

		          <!-- / Real-estate -->

		          <!-- Image & text -->

		          	<article class="tab-content" aria-name="text_image" id="text_image_description_form_container">
		          	</article>

		          <!-- / Image & text -->

	          </section>
	        </article>

				<!-- / Content -->

				<!-- Button -->

					<article class="buttons-container">
						<a aria-click="save" class="fa fa-check fa-3x text-light-blue low-opacity-button"></a>
						<a aria-click="close" class="fa fa-times fa-3x text-red low-opacity-button"></a>
					</article>

				<!-- / Button -->

			</aricle>
		</article>

		<section id="view" class="view-container">
			<svg id="svg">
				<g>
					<g id="g">
					</g>
				</g>
			</svg>
		</section>
		<section class="toolbox-container">
			<div class="top">
				<a aria-type="tool" aria-click="mouse" class="node active"><span class="fa fa-mouse-pointer fa-lg"></span></a>
				<a aria-type="tool" aria-click="polyline" class="node"><span class="fa fa-pencil fa-lg"></span></a>
			</div>
			<div class="bottom">
				<a aria-click="save" class="node"><span class="fa fa-check-circle-o fa-2x text-light-blue" title="Lưu và thoát"></span></a>
				<a aria-click="exit" class="node"><span class="fa fa-times-circle-o fa-2x text-red" title="Thoát"></span></a>
			</div>
		</section>
		<section class="images-container">
			<article class="image-container horizontal-list-container show">
				<div class="image-list horizontal-list">
					<article class="item horizontal-item"></article>
				</div>
			</article>
		</section>
	</article>

<!-- / Design -->

<!-- View -->

	<div id="view_part">

		<!-- Project -->

			<section class="margin-bottom-15 text-right">
				<a aria-click="project_image_interact" class="btn btn-flat btn-default"><span class="fa fa-picture-o fa-lg"></span> Thiết lập hình ảnh dự án</a>
			</section>

		<!-- / Project -->

		<!-- Block -->

			<article class="blocks-container box box-primary">

				<section class="box-header">
					<h2 class="box-title">Các block trong dự án <%= @project.project_name %></h2>
					<div class="box-tools pull-right">
			      <button class="btn btn-box-tool" aria-click="create_block"><i class="fa fa-plus"></i> Thêm mới</button>
			    </div>
				</section>
				<section class="box-body">
					<div class="horizontal-list-container padding-bottom-10">
						<div id="block_list" class="horizontal-list item-list block-list">
							<%= render partial: 'blocks/item_list', locals: { blocks: @project.blocks } %>
						</div>
					</div>
				</section>
				<article class="real-estate-container">
					<section class="box-header">
						<h2 class="box-title" id="selected_block_name"></h2>
						<div class="box-tools pull-right">
				      <button class="btn btn-box-tool" aria-click="create_real_estate"><i class="fa fa-plus"></i> Thêm mới</button>
				    </div>
					</section>
					<section class="box-body">
						<section id="real_estate_list">
						</section>
					</section>
				</article>
			</article>

		<!-- / Block -->

		<!-- Finish -->

			<section class="text-center">
				<a class="btn btn-primary" aria-click="build_finish">Hoàn tất</a>
			</section>

		<!-- / Finish -->

	</div>

<!-- / View -->
