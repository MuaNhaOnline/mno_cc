<form id="create_p" class="form create-form-project" data-entertotab>

	<section class="form-navigator">
		<article id="form_navigator" class="items-container">
			<a aria-name="project_name" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-info fa-lg "></i></div><div class="text"><%= t 'project.attribute.project_name_box' %></div>
			</a>
			<a aria-name="position" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-map-marker fa-lg "></i></div><div class="text"><%= t 'project.attribute.position_box' %></div>
			</a>
			<a aria-name="architecture" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-home fa-lg "></i></div><div class="text"><%= t 'project.attribute.architecture_box' %></div>
			</a>
			<a aria-name="utility" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-yelp fa-lg "></i></div><div class="text">Tiện ích - Tính năng</div>
			</a>
			<a aria-name="progress" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-calendar fa-lg "></i></div><div class="text"><%= t 'project.attribute.progress_box' %></div>
			</a>
			<a aria-name="human_resource" href="javascript:void(0)" class="item until-full">
				<div class="icon"><i class="fa fa-users fa-lg "></i></div><div class="text"><%= t 'project.attribute.human_resource_box' %></div>
			</a>
			<a aria-name="payment_info" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-money fa-lg "></i></div><div class="text"><%= t 'project.attribute.payment_info_box' %></div>
			</a>
			<a aria-name="content" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-bookmark-o fa-lg "></i></div><div class="text"><%= t 'project.attribute.content_box' %></div>
			</a>
			<a aria-name="image" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-picture-o fa-lg "></i></div><div class="text"><%= t 'project.attribute.image' %></div>
			</a>
			<a aria-name="button" href="javascript:void(0)" class="item">
				<div class="icon"><i class="fa fa-check fa-lg "></i></div><div class="text">
			</a>
		</article>
	</section>

	<section style="width: 100%">

		<section class="row">

			<section class="col-md-6 col-sm-8">

				<!-- Id (if edit) -->

					<% unless @p.id.blank? %>
						<input type="hidden" name="project[id]" value="<%= @p.id %>" />
					<% end %>

				<!-- / Id (if edit) -->

				<!-- Project name -->

					<article aria-name="project_name" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title"><%= t 'project.attribute.project_name_box' %></h2>
						</section>
						<section class="box-body">
							<article class="form-group">
								<label class="control-label" id="project_name">
									<%= t 'project.attribute.project_name' %>
									<sup class="required-label"></sup>
								</label>
								<input data-constraint="required" value="<%= @p.project_name %>" class="form-control" id="project_name" name="project[project_name]" />
							</article>
						</section>
					</article>

				<!-- /Project name -->
					
				<!-- Position -->

					<article aria-name="position" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title"><%= t 'project.attribute.position_box' %></h2>
						</section>
						<section class="box-body">

							<!-- Location -->

								<article class="form-group">
									<label class="control-label" for="address_number"><%= t 'project.attribute.address_number' %></label>
									<input value="<%= @p.address_number %>" class="form-control" name="project[address_number]" type="text" id="address_number" autofocus />
								</article>

								<input value="<%= @p.street.name unless @p.street.nil? %>" name="project[street]" type="hidden" id="street" data-nonvalid />
								<input value="<%= @p.ward.name unless @p.ward.nil? %>" name="project[ward]" type="hidden" id="ward" data-nonvalid />
								<input value="<%= @p.district.name unless @p.district.nil? %>" name="project[district]" type="hidden" id="district" data-nonvalid />
								<input value="<%= @p.province unless @p.province.nil? %>" name="project[province]" type="hidden" id="province" data-nonvalid />
								<input value="<%= @p.lat %>" name="project[lat]" type="hidden" id="lat" data-nonvalid />
								<input value="<%= @p.long %>" name="project[long]" type="hidden" id="long" data-nonvalid />

								<article class="form-group">
									<label class="control-label" for="location"><%= t 'project.attribute.address' %></label>
									<sup class="required-label"></sup>
									<input data-constraint="required" name="location" class="form-control" id="location" data-new="<%= @p.new_record? %>" placeholder="" type="text" /> 
								</article>

							<!-- / Location -->

							<!-- Map -->

								<article class="form-group">
									<div id="map"></div>
								</article>

							<!-- / Map -->

							<!-- Position description -->

								<article class="form-group">
									<label class="control-label" for="position_description">
										Mô tả vị trí
									</label>
									<textarea data-editor-extra-plugins=",uploadimage,filebrowser,image2" class="form-control" aria-input-type="editor" name="blog[position_description]" id="position_description"><%= @p.position_description %></textarea>
								</article>

							<!-- / Position description -->

						</section>
					</article>

				<!-- / Position -->
					
				<!-- Architecture -->

					<article aria-name="architecture" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title"><%= t 'project.attribute.architecture_box' %></h2>
						</section>
						<section class="box-body">

							<!-- Project type (user cannot edit) -->

								<div class="row">
									<article class="form-group col-ss-6">
										<label class="control-label" for="project_type"><%= t 'project.attribute.project_type' %></label>
										<select class="form-control input-toggle" id="project_type" name="project[project_type_id]" <%= 'disabledaaa="true"' unless @p.new_record? %>>
											<% project_types.each do |t| %>
												<% next if t.options.has_key? 'parent' %>
												<option value="<%= t.id %>" <%= 'selected' if (@p.new_record? ? t.options.has_key?('default') : (@p.project_type_id == t.id || t.name == selected_project_type_parent)) %> <%= t.options.has_key?('html') ? t.options['html']['attributes'].html_safe : '' %>><%= t 'project_type.text.' + t.name %></option>
											<% end %>
										</select>
									</article>
									<article class="form-group col-ss-6">
										<label class="control-label" for="project_type">&nbsp;</label>
										<select class="form-control" name="project[detail_project_type_id]" data-toggled-element="apartment un-complex_apartment un-adjacent_house un-office un-land un-complex">
											<option value hidden>Chọn chi tiết</option>
											<% project_types.each do |t| %>
												<% if t.options['parent'] == 'apartment' %>
													<option value="<%= t.id %>" <%= 'selected' if @p.project_type_id == t.id %>><%= t 'project_type.text.' + t.name %></option>
												<% end %>
											<% end %>
										</select>
										<select class="form-control" name="project[detail_project_type_id]" data-toggled-element="land un-complex_apartment un-adjacent_house un-office un-apartment un-complex">
											<option value hidden>Chọn chi tiết</option>
											<% project_types.each do |t| %>
												<% if t.options['parent'] == 'land' %>
													<option value="<%= t.id %>" <%= 'selected' if @p.project_type_id == t.id %>><%= t 'project_type.text.' + t.name %></option>
												<% end %>
											<% end %>
										</select>
										<select class="form-control" name="project[detail_project_type_id]" data-toggled-element="adjacent_house un-complex_apartment un-office un-apartment un-complex un-land">
											<option value hidden>Chọn chi tiết</option>
											<% project_types.each do |t| %>
												<% if t.options['parent'] == 'adjacent_house' %>
													<option value="<%= t.id %>" <%= 'selected' if @p.project_type_id == t.id %>><%= t 'project_type.text.' + t.name %></option>
												<% end %>
											<% end %>
										</select>
									</article>
								</div>

							<!-- / Project type -->

							<div class="row">

								<!-- Campus area -->

									<article class="form-group col-ss-6">
										<label class="control-label" for="campus_area"><%= t 'project.attribute.campus_area' %></label>
										<sup class="required-label"></sup>
										<div class="input-group">
											<input data-constraint="required real range" data-maxvalue="1000000" class="form-control separate-number" name="project[campus_area]" id="campus_area" value="<%= @p.campus_area %>" />
											<div class="input-group-addon">m<sup>2</sup></div>
										</div>
									</article>

								<!-- / Campus area -->

								<!-- Using ratio -->

									<article class="form-group col-ss-6">
										<label class="control-label" for="using_ratio"><%= t 'project.attribute.using_ratio' %></label>
										<div class="input-group">
											<input data-constraint="real range" data-minvalue="0" data-maxvalue="100" class="form-control" name="project[using_ratio]" id="using_ratio" value="<%= @p.using_ratio if @p.using_ratio != 0 %>" />
											<div class="input-group-addon">%</div>
										</div>
									</article>

								<!-- / Using ratio -->

							</div>

						</section>
					</article>

				<!-- / Architecture -->

				<!-- Ultitity -->

					<article aria-name="utility" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title">Tiện ích - Tính năng</h2>
						</section>
						<section class="box-body">
							<article class="tab-container input">
								<section class="tab-list">
									<section class="list horizontal-list-container text-left">
										<ul class="horizontal-list">
										</ul>
									</section>
									<section class="add-button">
										<a href="javascript:void(0)" aria-click="add_tab" class="fa fa-plus"></a>
									</section>
								</section>
								<section class="tab-content-list">

									<% if @p.new_record? || @p.utilities.blank? %>

										<article class="tab-content" aria-name="new">

											<input type="hidden" value="" name="project[utilities][tab_name][id]" />

											<article class="form-group">
												<label class="control-label">
													Nhãn
												</label>
												<input type="text" class="form-control" name="project[utilities][tab_name][title]">
											</article>

											<article class="form-group">
												<label class="control-label">
													Mô tả
												</label>
												<textarea data-constraint="required" class="form-control" name="project[utilities][tab_name][description]"></textarea>
											</article>

											<article class="form-group">
												<label class="control-label">
													Hình ảnh
												</label>
												<input type="file" multiple class="file-upload" class="form-control" name="project[utilities][tab_name][images][]" data-amount="3" data-has_order data-has_description data-types="image">
											</article>

										</article>

									<% else %>

										<% @p.utilities.each do |utility| %>

											<article class="tab-content" aria-name="new_<%= utility.id %>">

												<input type="hidden" value="<%= utility.id %>" name="project[utilities][tab_name][id]" />

												<article class="form-group">
													<label class="control-label">
														Nhãn
													</label>
													<input type="text" value="<%= utility.title %>" class="form-control" name="project[utilities][tab_name][title]">
												</article>

												<article class="form-group">
													<label class="control-label">
														Mô tả
													</label>
													<textarea data-constraint="required" class="form-control" name="project[utilities][tab_name][description]"><%= ApplicationHelper.decode_plain_text utility.description %></textarea>
												</article>

												<% 
													utility_image_init_value = ''
													_images = []
													utility.images.each do |utility_image|
														_images << { 'id'=> utility_image.id, 'url'=> utility_image.image.url, 'description'=> utility_image.description }
													end
													utility_image_init_value = _images.to_json
												%>

												<article class="form-group">
													<label class="control-label">
														Hình ảnh
													</label>
													<input type="file" multiple class="file-upload" class="form-control" name="project[utilities][tab_name][images][]" data-amount="3" data-has_order data-has_description data-types="image" data-init-value="<%= utility_image_init_value %>">
												</article>

											</article>

										<% end %>

									<% end %>

								</section>
							</article>
						</section>
					</article>

				<!-- / Ultitity -->

				<!-- Progress -->

					<article aria-name="progress" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title"><%= t 'project.attribute.progress_box' %></h2>
						</section>
						<section class="box-body">
							<article class="form-group">
								<label class="control-label">
									<%= t 'project.attribute.date_display_type' %>
									<sup class="required-label"></sup>
								</label>
								<div>
									<label class="radio-inline"><input data-constraint="required" name="project[date_display_type]" type="radio" value="1" <%= 'checked' if @p.date_display_type == 1 %> />Ngày</label>
									<label class="radio-inline"><input name="project[date_display_type]" type="radio" value="2" <%= 'checked' if @p.new_record? || @p.date_display_type == 2 %> />Quý</label>
									<label class="radio-inline"><input name="project[date_display_type]" type="radio" value="3" <%= 'checked' if @p.date_display_type == 3 %> />Năm</label>
								</div>
							</article>

							<div class="row">

								<!-- Estimate starting date -->

									<article class="form-group col-ss-6">
										<label class="control-label" for="estimate_starting_date"><%= t 'project.attribute.estimate_starting_date' %></label>
										<div class="input-group">
											<div class="input-group-addon">
												<i class="fa fa-calendar"></i>
											</div>
											<input name="project[estimate_starting_date]" class="form-control" data-provide="datepicker" data-date-format="dd/mm/yyyy" value="<%= @p.estimate_starting_date.strftime '%d/%m/%Y' unless @p.estimate_starting_date.blank? %>" id="estimate_starting_date" />
										</div>
									</article>

								<!-- / Estimate starting date -->

								<!-- Estimate finishing date -->

									<article class="form-group col-ss-6">
										<label class="control-label" for="estimate_finishing_date"><%= t 'project.attribute.estimate_finishing_date' %></label>
										<div class="input-group">
											<div class="input-group-addon">
												<i class="fa fa-calendar"></i>
											</div>
											<input name="project[estimate_finishing_date]" class="form-control" data-provide="datepicker" data-date-format="dd/mm/yyyy" value="<%= @p.estimate_finishing_date.strftime '%d/%m/%Y' unless @p.estimate_finishing_date.blank? %>" id="estimate_finishing_date" />
										</div>
									</article>

								<!-- / Estimate finishing date -->

							</div>

							<div class="row">

								<!-- Starting date -->

									<article class="form-group col-ss-6">
										<label class="control-label" for="starting_date"><%= t 'project.attribute.starting_date' %></label>
										<div class="input-group">
											<div class="input-group-addon">
												<i class="fa fa-calendar"></i>
											</div>
											<input name="project[starting_date]" class="form-control" data-provide="datepicker" data-date-format="dd/mm/yyyy" value="<%= @p.starting_date.strftime '%d/%m/%Y' unless @p.starting_date.blank? %>" id="starting_date" />
										</div>
									</article>

								<!-- / Starting date -->

								<!-- Finished base date -->

									<article class="form-group col-ss-6">
										<label class="control-label" for="finished_base_date"><%= t 'project.attribute.finished_base_date' %></label>
										<div class="input-group">
											<div class="input-group-addon">
												<i class="fa fa-calendar"></i>
											</div>
											<input name="project[finished_base_date]" class="form-control" data-provide="datepicker" data-date-format="dd/mm/yyyy" value="<%= @p.finished_base_date.strftime '%d/%m/%Y' unless @p.finished_base_date.blank? %>" id="finished_base_date" />
										</div>
									</article>

								<!-- / Finished base date -->

							</div>

							<div class="row">

								<!-- Transfer date -->

									<article class="form-group col-ss-6">
										<label class="control-label" for="transfer_date"><%= t 'project.attribute.transfer_date' %></label>
										<div class="input-group">
											<div class="input-group-addon">
												<i class="fa fa-calendar"></i>
											</div>
											<input name="project[transfer_date]" class="form-control" data-provide="datepicker" data-date-format="dd/mm/yyyy" value="<%= @p.transfer_date.strftime '%d/%m/%Y' unless @p.transfer_date.blank? %>" id="transfer_date" />
										</div>
									</article>

								<!-- / Transfer date -->

								<!-- Docs issue date -->

									<article class="form-group col-ss-6">
										<label class="control-label" for="docs_issue_date"><%= t 'project.attribute.docs_issue_date' %></label>
										<div class="input-group">
											<div class="input-group-addon">
												<i class="fa fa-calendar"></i>
											</div>
											<input name="project[docs_issue_date]"  class="form-control" data-provide="datepicker" data-date-format="dd/mm/yyyy" value="<%= @p.docs_issue_date.strftime '%d/%m/%Y' unless @p.docs_issue_date.blank? %>" id="docs_issue_date" />
										</div>
									</article>

								<!-- / Docs issue date -->
								
							</div>

						</section>
					</article>

				<!-- / Progress -->

				<!-- Human resource -->

					<article aria-name="human_resource" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title"><%= t 'project.attribute.human_resource_box' %></h2>
						</section>
						<section class="box-body">

							<!-- Investor -->

								<article class="form-group">
									<label class="control-label" for="investor_id"><%= t 'project.attribute.investor' %></label>
									<input class="form-control" data-url="/investors/autocomplete" aria-input-type="autocomplete" <%= "value=\"#{@p.investor.name}\" data-value=\"#{@p.investor.id}\"".html_safe if @p.investor.present? %> data-free name="project[investor_id]" id="investor_id" />
								</article>

							<!-- / Investor -->

							<!-- Unit description -->

								<article class="form-group">
									<label class="control-label" for="unit_description"><%= t 'project.attribute.unit_description' %></label>
									<textarea name="project[unit_description]" class="form-control" id="unit_description"><%= @p.unit_description %></textarea>
								</article>

							<!-- / Unit description -->

						</section>
					</article>

				<!-- / Human resource -->

				<!-- Payment info -->

					<article aria-name="payment_info" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title"><%= t 'project.attribute.payment_info_box' %></h2>
						</section>
						<section class="box-body">

							<!-- Currency -->

								<article class="form-group">
									<label class="control-label" for="currency_id"><%= t 'project.attribute.currency' %></label>
									<select name="project[currency_id]" class="form-control" id="currency_id">
										<% Currency.get_options.each do |c| %>
											<option value="<%= c.id %>" <%= 'selected' if c.id == @p.currency_id || (!c.options_hash.nil? && c.options_hash.has_key?('default') && @p.currency_id.blank?) %> <%= c.options_hash['html']['attributes'] %>><%= c.name %></option>
										<% end %>
									</select>
								</article>

							<!-- / Currency -->

							<!-- Price -->

								<article class="form-group" data-toggled-element="sell un-rent">
									<label class="control-label" for="unit_price">
										Đơn giá
									</label>
									<div class="input-group">
										<input data-constraint="integer range" data-maxvalue="1000000000000" value="<%= @p.unit_price.to_i unless @p.unit_price.blank? %>" name="project[unit_price]" class="form-control separate-number" id="unit_price">
										<div class="input-group-btn">
											<input type="hidden" name="project[price_unit_id]" value="<%= current_price_unit.id %>" />
											<button type="button" class="btn btn-flat btn-default dropdown-toggle unit-label" data-toggle="dropdown" aria-expanded="false"><span class="text"><%= t 'unit.text.' + current_price_unit.name %></span><span class="fa fa-caret-down margin-left-5"></span></button>
											<ul class="dropdown-menu pull-right">
												<%= price_unit_html.html_safe %>
											</ul>
										</div>
									</div>
									<section class="money-text font-size-12"><%= @p.unit_price_text %></section>
								</article>

							<!-- / Price -->

							<!-- Payment method -->

								<article class="form-group">
									<label class="control-label" for="payment_method"><%= t 'project.attribute.payment_method' %></label>
									<textarea data-editor-extra-plugins=",uploadimage,filebrowser,image2,table" aria-input-type="editor" name="project[payment_method]" class="form-control" id="payment_method"><%= @p.payment_method %></textarea>
								</article>

					            <article class="form-group">
					            	<label class="control-label" for="payment_attachment">Đính kèm</label>
				              		<input class="file-upload" type="file" multiple name="project[payment_attachment_ids][]" aria-name="image_upload" data-amount="5" data-init-value="<%= attachment_init_value %>" data-has_description data-has_order id="payment_attachment" />
					            </article>

							<!-- / Payment method -->

						</section>
					</article>

				<!-- / Payment info -->

				<!-- Content -->

					<article aria-name="content" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title">
								Giới thiệu
							</h2>
						</section>
						<section class="box-body">

							<!-- Title -->

								<article class="form-group">
									<label class="control-label" for="slogan">Khẩu hiệu (slogan)</label>
									<sup class="required-label"></sup>
									<input data-constraint="required" value="<%= @p.slogan %>" name="project[slogan]" class="form-control" id="slogan">
								</article>

							<!-- / Title -->

							<!-- Description -->

								<article class="form-group">
									<label class="control-label" for="description">Giới thiệu</label>
									<sup class="required-label"></sup>
									<textarea data-editor-extra-plugins=",uploadimage,filebrowser,image2" data-constraint="required" name="project[description]" class="form-control" id="description" aria-input-type="editor"><%= @p.description %></textarea>
								</article>

							<!-- / Description -->

						</section>
					</article>

				<!-- / Content -->

				<!-- Images -->

					<article aria-name="image" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title">
								<%= t 'project.attribute.image' %>
							</h2>
						</section>
						<section class="box-body">
							<article class="form-group margin-0">
								<label class="control-label">Hình ảnh</label>
								<sup class="required-label"></sup>
								<p>Bạn có thể đăng 10 ảnh mô tả dự án của mình</p>
								<p>Hãy chọn <b>hình đại diện</b> bằng cách click vào hình</p>
								<input class="file-upload" data-constraint="required" type="file" multiple name="project[image_ids][]" aria-name="image_upload" data-amount="10" data-types="image" data-init-value="<%= image_init_value %>" data-has_description data-has_avatar data-has_order />
							</article>
						</section>
					</article>

				<!-- / Images -->

				<!-- Button -->

					<article aria-name="button" class="box box-solid">
						<section class="box-body row">
							<div class="margin-top-bottom-5 col-sm-6">
								<button type="submit" class="btn btn-primary btn-block btn-flat"><b><%= t 'project.view.create.finish' %></b></button>
							</div>
							<div class="margin-top-bottom-5 col-sm-6">
								<button type="button" class="btn btn-default btn-block btn-flat" aria-click="save-draft"><b><%= t 'project.view.create.save_draft' %></b></button>
							</div>
						</section>
					</article>

				<!-- / Button -->

			</section>
				
		</section>
	
	</section>

</form>