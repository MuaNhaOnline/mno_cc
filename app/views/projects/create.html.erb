<% 
=begin
	params: @project
=end

	@title = t 'project.view.create.page_title'

	# Project type
	project_types = ProjectType.get_options
	selected_project_type_parent = ''
	if !@project.new_record? && @project.project_type.present? && @project.project_type.options['parent']
		selected_project_type_parent = @project.project_type.options['parent']
	end

	# Unit options
	price_unit_html = ''
	current_price_unit = nil
	Unit.get_options.each do |u|
		if u.options_hash['group'] == 'project'
			if u.id == @project.price_unit_id || (!u.options_hash.nil? && u.options_hash.has_key?('default') && @project.price_unit_id.blank?)
				current_price_unit = u
			end

			price_unit_html += "<li><a data-value='#{u.id}' href='javascript:void(0)' aria-click='change-unit'>#{t 'unit.text.' + u.name}</a>"
		end
	end

	# Logo
	logo_init_value = ''
	if !@project.new_record? && @project.logo.present?
		logo_init_value = { 'url': @project.logo.url }.to_json
	end
	full_logo_init_value = ''
	if !@project.new_record? && @project.full_logo.present?
		full_logo_init_value = { 'url': @project.full_logo.url }.to_json
	end

	# Image
	image_init_value = ''
	unless @project.new_record?
		_images = []
		@project.images.each do |p_image|
			_images << { 'id': p_image.id, 'url': p_image.image.url, 'description': p_image.description, 'is_avatar': p_image.is_avatar, 'order' => p_image.order }
		end
		image_init_value = _images.to_json
	end

	# Cover image
	cover_image_init_value = ''
	if !@project.new_record? && @project.cover_image.present?
		cover_image_init_value = { 'url': @project.cover_image.url }.to_json
	end

	# Attachment
	attachment_init_value = ''
	unless @project.new_record?
		attachments = []
		@project.payment_attachments.each do |attachment|
			attachments << { 'id': attachment.id, 'file_name': attachment.file_file_name, 'url': attachment.file.url, 'description': attachment.description, 'order' => attachment.order }
		end
		attachment_init_value = attachments.to_json
	end
%>

