		</article>
	</section>

	<section style="width: 100%">

		<section class="row">

			<section class="col-md-6 col-sm-8">

				<!-- Id (if edit) -->

					<% unless @project.id.blank? %>
						<input type="hidden" name="project[id]" value="<%= @project.id %>" />
					<% end %>

				<!-- / Id (if edit) -->

				<!-- Project basic info -->

					<article aria-name="description" class="box box-default">
						<section class="box-header with-border">
							<h2 class="box-title">Giới thiệu</h2>
						</section>
						<section class="box-body">

							<!-- Project name -->
							
								<article class="form-group">
									<label class="control-label" for="project_name">
										<%= t 'project.attribute.project_name' %>
