<% content_for :stylesheets do %>
	<link rel="stylesheet" type="text/css" href="/assets/projects/create.css">
<% end %>

<% content_for :scripts do %>
	<script type="text/javascript" src="/assets/projects/create.js"></script>
	<script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false&libraries=places'></script>
	<script type="text/javascript" src="/assets/shared/locationpicker.js"></script>
	<script type="text/javascript" src="/assets/shared/jscolor.js"></script>
<% end %>

<% 
=begin
	params: @p
=end

	@title = t 'project.view.create.page_title'

	# Project type
	project_types = ProjectType.get_options
	selected_project_type_parent = ''
	if !@p.new_record? && @p.project_type.present? && @p.project_type.options['parent']
		selected_project_type_parent = @p.project_type.options['parent']
	end

	# Unit options
	price_unit_html = ''
	current_price_unit = nil
	Unit.get_options.each do |u|
		if u.options_hash['group'] == 'project'
			if u.id == @p.price_unit_id || (!u.options_hash.nil? && u.options_hash.has_key?('default') && @p.price_unit_id.blank?)
				current_price_unit = u
			end

			price_unit_html += "<li><a data-value='#{u.id}' href='javascript:void(0)' aria-click='change-unit'>#{t 'unit.text.' + u.name}</a>"
		end
	end

	# Image
	image_init_value = ''
	unless @p.new_record?
		_images = []
		@p.images.each do |p_image|
			_images << { 'id': p_image.id, 'url': p_image.image.url, 'description': p_image.description, 'is_avatar': p_image.is_avatar, 'order' => p_image.order }
		end
		image_init_value = _images.to_json
	end

	# Attachment
	attachment_init_value = ''
	unless @p.new_record?
		attachments = []
		@p.payment_attachments.each do |attachment|
			attachments << { 'id': attachment.id, 'file_name': attachment.file_file_name, 'url': attachment.file.url, 'description': attachment.description, 'order' => attachment.order }
		end
		attachment_init_value = attachments.to_json
	end
%>

