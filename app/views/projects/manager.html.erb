<!-- #start TableResult -->
<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<td>ID</td>
				<td>Tên</td>
				<td>Tỉnh/Thành phố</td>
				<td>Quận</td>
				<td>Đường</td>
				<td>Trạng thái</td>		
				<td>Chức năng</td>
			</tr>
		</thead>
		<tbody>
			<% @projects.each do |project| %>
        <% status = project.is_draft == 1 ? 'draft' : (false && project.is_pending == 1 ? 'pend' : (project.is_show == 1 ? 'show' : 'hide')) %>
				<tr data-value="<%= project.id %>">
					<td>
						<a href="/projects/<%= project.id %>">
							<span><%= ApplicationHelper.id_format(project.id, 'PJ') %></span>
							<img src="<%= project.images.length > 0 ? "/images/#{project.images[0].id}" : '/assets/product/BDS05.jpg' %>" width="100px" height="100px">
						</a>
					</td>						
					<td><%= project.title %></td>
					<td><%= project.province.name %></td>
					<td><%= project.district.name %></td>
					<td><%= project.street.name %></td>
					<td data-object="status">
            <%=
              case status
                when 'draft'
                  'Đang soạn'
                when 'pend'
                  'Đang chờ duyệt'
                when 'show'
                  'Đang hiển thị'
                when 'hide'
                  'Đang ẩn'
              end
            %>
          </td>
					<td>
            <div class="dropdown">
              <button id="drop_down_button_<%= project.id %>be" class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="true">
                Điều khiển
              </button>
              <ul class="dropdown-menu" role="menu" aria-labelledby="drop_down_button_<%= project.id %>" style="left: initial; right: 0; min-width: 100%">
                <li role="presentation">
                  <% if project.is_show === 1 %>
                    <a data-function="change_show_status" data-value="0" href="javascript:void(0)">
                      Ẩn
                    </a>
                  <% else %>
                    <a data-function="change_show_status" data-value="1" href="javascript:void(0)">
                      Hiện
                    </a>
                  <% end %>
                  <a href="/projects/create/<%= project.id %>">
                    <%= status == 'draft' ? 'Soạn tiếp' : 'Sửa' %>
                  </a>
                  <a data-function="delete" href="javascript:void(0)">
                    Xóa
                  </a>
                </li>
              </ul>
            </div>
          </td>
					</td>
				</tr>
			<% end %>
		</tbody>			
	</table>		
</div>
<!-- #end TableResult -->