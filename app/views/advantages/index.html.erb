<p id="notice"><%= notice %></p>

<h1>Listing Advantages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Options</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advantages.each do |advantage| %>
      <tr>
        <td><%= advantage.name %></td>
        <td><%= advantage.code %></td>
        <td><%= advantage.options %></td>
        <td><%= link_to 'Show', advantage %></td>
        <td><%= link_to 'Edit', edit_advantage_path(advantage) %></td>
        <td><%= link_to 'Destroy', advantage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advantage', new_advantage_path %>
