<% investors.each do |i| %>
  <% 

    avatar_init_value = ''
    if !i.new_record? && i.avatar.present?
      avatar_init_value = '0,' + i.avatar.url
    end
     
  %>
  <article class="col-md-3 col-sm-4 col-xs-6">
    <article class="item" data-value="<%= i.id %>" data-avatar="<%= avatar_init_value %>">
      <section class="top">
        <%= investor_avatar i, attribute: 'aria-object="avatar"' %>
      </section>
      <section class="bottom">
        <p aria-object="name" class="title"><%= i.name %></p>
      </section>
      <section class="control">
        <span class="node">
          <a aria-click="rename" class="fa fa-pencil fa-lg"></a>
        </span>
        <span class="node">
          <a aria-click="delete" href="javascript:void(0)" class="fa fa-trash-o fa-lg"></a>
        </span>
      </section>
    </article>
  </article>
<% end %>