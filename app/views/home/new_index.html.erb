<!-- Search -->

	<article class="search-ctn">
		<section class="background"></section>
		<div class="container no-horizontal-padding">
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-7 col-lg-7">
					<h2 class="title">
						Tìm kiếm <br class="hidden-md hidden-lg" />theo nhu cầu
						<span class="sub-title">
							Bạn có thể tìm kiếm các bất động sản theo tiêu chí mà bạn muốn bằng các công cụ sẵn có của hệ thống.
						</span>
					</h2>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-5 col-lg-5">
					<div class="form-ctn">
						<form class="form" action="/tim_kiem" method="get">
							<a href="javascript::" class="search-type">
								<span class="icon ico-map-o"></span> Theo vị trí với bản đồ
							</a>
							<label class="search-type" for="search_keyword">
								<span class="icon ico-filter"></span> Theo tiêu chí cụ thể
							</label>
							<div class="row">
								<article class="form-group col-xs-6">
									<input class="form-control" name="search[keyword]" placeholder="Mã, tên, mô tả" id="search_keyword" />
								</article>
								<article class="form-group col-xs-6">
									<select class="form-control" name="search[purpose]">
										<option value="">Đang bán hoặc cho thuê</option>
										<option value="">Bất kì</option>
										<option value="sell">Đang bán</option>
										<option value="rent">Đang cho thuê</option>
									</select>
								</article>
								<article class="form-group col-xs-6">
									<select class="form-control" name="search[real_estate_type]">
										<option value="" hidden>Loại bất động sản</option>
										<option value="">Bất kì</option>
										<% RealEstateType.all.each do |type| %>
											<option value="<%= type.id %>"><%= type.display_name %></option>
										<% end %>
									</select>
								</article>
								<article class="form-group col-xs-6">
									<select class="form-control" name="search[district]">
										<option value="" hidden>Quận/huyện</option>
										<option value="">Bất kì</option>
										<% District.all.each do |district| %>
											<option value="<%= district.id %>"><%= district.name %></option>
										<% end %>
									</select>
								</article>
								<article class="form-group col-xs-6">
									<select class="form-control" name="search[price_from]">
										<option value="" hidden>Giá tối thiểu</option>
										<option value="">Bất kì</option>
										<option value="1">1 tỷ</option>
										<option value="1.5">1.5 tỷ</option>
										<option value="2">2 tỷ</option>
										<option value="3">3 tỷ</option>
										<option value="5">5 tỷ</option>
										<option value="10">10 tỷ</option>
									</select>
								</article>
								<article class="form-group col-xs-6">
									<select class="form-control" name="search[price_to]">
										<option value="" hidden>Giá tối đa</option>
										<option value="">Bất kì</option>
										<option value="1">1 tỷ</option>
										<option value="1.5">1.5 tỷ</option>
										<option value="2">2 tỷ</option>
										<option value="3">3 tỷ</option>
										<option value="5">5 tỷ</option>
										<option value="10">10 tỷ</option>
									</select>
								</article>
								<article class="form-group col-xs-6">
									<select class="form-control" name="search[area_from]">
										<option value="" hidden>Diện tích tối thiểu</option>
										<option value="">Bất kì</option>
										<option value="50">50m2</option>
										<option value="100">100m2</option>
										<option value="150">150m2</option>
										<option value="200">200m2</option>
										<option value="300">300m2</option>
										<option value="500">500m2</option>
									</select>
								</article>
								<article class="form-group col-xs-6">
									<select class="form-control" name="search[area_to]">
										<option value="" hidden>Diện tích tối đa</option>
										<option value="">Bất kì</option>
										<option value="50">50m2</option>
										<option value="100">100m2</option>
										<option value="150">150m2</option>
										<option value="200">200m2</option>
										<option value="300">300m2</option>
										<option value="500">500m2</option>
									</select>
								</article>
							</div>
							<article class="form-group margin-top-15">
								<button type="submit" class="btn btn-block btn-green">
									Tìm kiếm
								</button>
							</article>
						</form>
					</div>
				</div>
			</div>
		</div>
	</article>

<!-- / Search -->

