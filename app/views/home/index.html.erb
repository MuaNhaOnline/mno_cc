											id: 		'contact_form',
											class: 		'form'
										}
						) do |f|
					%>
						<!-- Subject -->
						<%= f.field(
							'hidden',
							:subject
						)  %>
						<!-- Mail type -->
						<%= f.field(
							'hidden',
							:system_mail_type
						)  %>
						<article class="background lazyload" data-original="/assets/home/index/help.png"></article>

						<!-- Request info -->
						<%=
							fields_for(
								'mail[requested_info]',
								request_mail.requested_info 
							) do |requested_info_form|
						%>
							<!-- Requested type -->
							<%= requested_info_form.field(
								'hidden',
								:requested_type
							) %>

							<!-- Object type -->
							<article class="types-list">
								<label>
									<%= requested_info_form.radio_button :object_type, 'real_estate' %><span class="text">Bất động sản</span>
