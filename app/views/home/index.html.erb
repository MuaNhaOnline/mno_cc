								<label>
									<%= requested_info_form.radio_button :object_type, 'finance' %><span class="text">Tài chính</span>
								</label>
								<label>
									<%= requested_info_form.radio_button :object_type, 'law' %><span class="text">Luật</span>
								</label>
								<label>
									<%= requested_info_form.radio_button :object_type, 'architecture' %><span class="text">Kiến trúc</span>
								</label>
							</article>
						<% end %>

						<!-- Content -->
						<%= f.field(
							'textarea',
							:content,
							{
								placeholder: 	'Bạn đang cần gì?'
							},
							{
								label: 			false
							}
						) %>

						<% unless signed? %>
							<!-- Contact info -->
							<%=
								fields_for(
									'contact_info',
									current_left_contact
								) do |contact_form|
							%>
								<%= contact_form.field(
									'text',
									:name,
									{
										placeholder: 	'Tên của bạn'
									},
									{
										label:  		false
									}
								) %>

								<div class="row">
									<article class="col-xs-6">
										<%= contact_form.field(
											'email',
											:email,
											{
												placeholder: 	'Email'
											},
											{
												label:  		false
											}
										) %>
									</article>
									<article class="col-xs-6">
										<%= contact_form.field(
											'number',
											:phone_number,
											{
												placeholder: 	'Số điện thoại'
											},
											{
												label:  		false
											}
										) %>
									</article>
								</div>
							<% end %>
						<% end %>

						<div class="form-group text-center">
							<%= f.submit 'Gửi', class: 'btn' %>
						</div>

						<p class="callout-text">
							Chúng tôi sẽ liên hệ bạn trong thời gian sớm nhất
						</p>
					<% end %>
				</div>
				<!-- <div class="col-xs-12 col-md-8">
				</div>
			</div>
		</div> -->
	</article>

