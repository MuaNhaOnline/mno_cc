<!-- Contact -->

	<article class="contact-ctn">
		<h2 class="box-title">
			Bạn đang cần gì?
			<span class="sub-title">
				Hãy để lại thông tin, chúng tôi sẽ tư vấn giúp bạn.
			</span>
		</h2>
		<!-- <div class="container no-horizontal-padding">
			<div class="row">
				<div class="col-xs-12 col-md-4"> -->
					<%
						request_mail = SystemMail.new({
							subject: 			'Liên hệ',
							system_mail_type: 	2,
							requested_info: 	RequestedSystemMail.new({
													object_type: 	'real_estate',
													requested_type: 3
												})
						})
					%>
					<%=
						form_for(
							request_mail,
							as: 		'mail',
							url: 		'/mail/save',
							method: 	'POST',
							html: 		{
											id: 		'contact_form',
											class: 		'form'
										}
						) do |f|
					%>
						<!-- Subject -->
						<%= f.field(
							'hidden',
							:subject
						)  %>
						<!-- Mail type -->
						<%= f.field(
							'hidden',
							:system_mail_type
						)  %>
						<article class="background lazyload" data-original="/assets/home/index/help.png"></article>

						<!-- Request info -->
						<%=
							fields_for(
								'mail[requested_info]',
								request_mail.requested_info 
							) do |requested_info_form|
						%>
							<!-- Requested type -->
							<%= requested_info_form.field(
								'hidden',
								:requested_type
							) %>

							<!-- Object type -->
							<article class="types-list">
								<label>
									<%= requested_info_form.radio_button :object_type, 'real_estate' %><span class="text">Bất động sản</span>
								</label>
								<label>
									<%= requested_info_form.radio_button :object_type, 'finance' %><span class="text">Tài chính</span>
								</label>
								<label>
									<%= requested_info_form.radio_button :object_type, 'law' %><span class="text">Luật</span>
								</label>
								<label>
									<%= requested_info_form.radio_button :object_type, 'architecture' %><span class="text">Kiến trúc</span>
								</label>
							</article>
						<% end %>

						<!-- Content -->
						<%= f.field(
							'textarea',
							:content,
							{
								placeholder: 	'Bạn đang cần gì?'
							},
							{
								label: 			false
							}
						) %>

						<% unless signed? %>
							<!-- Contact info -->
							<%=
								fields_for(
									'contact_info',
									current_left_contact
								) do |contact_form|
							%>
								<%= contact_form.field(
									'text',
									:name,
									{
										placeholder: 	'Tên của bạn'
									},
									{
										label:  		false
									}
								) %>

								<div class="row">
									<article class="col-xs-6">
										<%= contact_form.field(
											'email',
											:email,
											{
												placeholder: 	'Email'
											},
											{
												label:  		false
											}
										) %>
									</article>
									<article class="col-xs-6">
										<%= contact_form.field(
											'number',
											:phone_number,
											{
												placeholder: 	'Số điện thoại'
											},
											{
												label:  		false
											}
										) %>
									</article>
								</div>
							<% end %>
						<% end %>

						<div class="form-group text-center">
							<%= f.submit 'Gửi', class: 'btn' %>
						</div>

						<p class="callout-text">
							Chúng tôi sẽ liên hệ bạn trong thời gian sớm nhất
						</p>
					<% end %>
				</div>
				<!-- <div class="col-xs-12 col-md-8">
				</div>
			</div>
		</div> -->
	</article>

