<!DOCTYPE html>
<html>
<head>
  <title><%= @title.blank? ? '' : @title + ' - ' %> Mua nhà online</title>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <meta name="description" content="MuaNhaOnline - Giá trị thực trong tầm tay">
  <meta name="keyword" content="<%= @keyword %>">

  <link rel="stylesheet" type="text/css" href="/assets/shared/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/assets/shared/layout_front.css">
  <link rel="stylesheet" type="text/css" href="/assets/shared/form_custom.css">
  <%= yield :stylesheets %>
</head>

<body>
<!-- #start header -->
<header>
     <section class="navbar-fixed-top" style="background-color: #fff">
          <div class="container header">

               <!-- start logo -->
               <a href="#">
                    <article class="logo">
                         <img src="/assets/logo/logo.png">
                    </article>
               </a>
               <!-- end logo -->

               <!-- start sitemap -->
               <article class="sitemap">
                    <ul>
                         <li>
                              <div class="btn-group">
                                 <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                  Bất động sản <span class="caret"></span>
                                 </button>
                                 <ul class="dropdown-menu">
                                     <li><a href="#">Bán</a></li>
                                     <li><a href="#">Cho thuê</a></li>
                                 </ul>
                              </div>
                         </li>
                         <li>
                              <div class="btn-group">
                                 <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                  Dự án <span class="caret"></span>
                                 </button>
                                 <ul class="dropdown-menu">
                                     <li><a href="#">Bán</a></li>
                                     <li><a href="#">Cho thuê</a></li>
                                 </ul>
                              </div>
                         </li>
                         <li>
                              <div class="btn-group">
                                 <button type="button" class="btn btn-link">
                                  Doanh nghiệp
                                 </button>
                         </li>
                         <li>
                              <div class="btn-group">
                                 <button type="button" class="btn btn-link">
                                  Tin tức
                                 </button>
                         </li>
                    </ul>
               </article>
               <!-- end sitemap -->

               <!-- start function button -->
               <article class="function-button">
                  <div class="btn-group">
                     <button type="button" class="btn btn-danger">Đăng tin</button>
                     <button type="button" style="border-left-color:#FF7A12" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                     </button>
                    <ul class="dropdown-menu">
                      <li><a href="#">Đăng tin VIP</a></li>
                      <li><a href="#">Đăng ký mua/thuê</a></li>                      
                      <li role="separator" class="divider"></li>
                      <li><a href="#">Đăng ký nhận tin</a></li>
                    </ul>
                  </div>
               </article>
               <!-- end function button -->

               <!-- start user-box -->
               <article class="user-box">
                  <div class="btn-group">
                     <a href="#" class="btn-link dropdown-toggle" data-toggle="dropdown">
                        <div class="img-user"></div>
                        <span>Đăng nhập</span>
                     </a>
                     <ul class="dropdown-menu">
                        <li><a href="#">Đăng nhập</a></li>
                        <li><a href="#" data-toggle="modal" data-target="#dang_ky">Đăng ký</a></li>                      
                        <li role="separator" class="divider"></li>
                        <li class="title">Đăng nhập bằng:</li>
                        <li class="social-link">
                           <a href="#"><img src="/assets/logo/facebook-32.png"></a>
                           <a href="#"><img src="/assets/logo/google_plus-32.png"></a>
                           <a href="#"><img src="/assets/logo/twitter-32.png"></a>
                        </li>
                    </ul>
                  </div>
               </article>

               <article class="user-box-login" style="display:none">
                  <div class="btn-group">
                     <a class="btn btn-link dropdown-toggle" data-toggle="dropdown">
                        <img src="/assets/icon/avatar.jpg">
                        <span>PenguinBlue-Chip</span>
                     </a>
                     <ul class="dropdown-menu">
                        <li><a href="#">Thông tin tài khoản</a></li>
                        <li><a href="#">Đổi mật khẩu</a></li>
                        <li><a href="#">Nâng cấp VIP</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Đăng xuất</a></li>
                     </ul>
                  </div>
               </article>
               <!-- end user -->
          </div>
     </section>
</header>
<!-- #end header -->

<!-- #start main frame -->
<main>
     <%= yield %>
</main>
<!-- #end main frame -->

<!-- #start footer -->
<footer>

</footer>
<!-- #end footer -->

<!-- start modal -->

<!-- Đăng ký Modal -->
<div class="modal fade" id="dang_ky">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Đăng ký tài khoản</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        <button type="button" class="btn btn-primary">Đăng ký</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- end modal -->
</body>

<script type="text/javascript" src="/assets/shared/jquery.min.js"></script>
<script type="text/javascript" src="/assets/shared/bootstrap.js"></script>
<%= yield :scripts %>
</html>