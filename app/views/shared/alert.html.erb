<% 
=begin
	type: default, danger, ....
	title
	content
=end

	type ||= 'default'
%>
<div class="row">
	<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
		<article class="box box-<%= type %>">
			<% if defined? title %>
				<section class="box-header">
					<h2 class="box-title">
						<%= title %>
					</h2>
				</section>
			<% end %>
			<% if defined? content %>
				<section class="box-body">
					<%= content.html_safe %>
				</section>
			<% end %>
		</article>
	</div>
</div>