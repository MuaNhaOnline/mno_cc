<!-- per, total, page = 1 -->
<%
	page = defined?(page) ? page : 1
	page_count = (total + per - 1) / per

	return if page_count <= 1
%>

<div class="paging">
	<div class="left" aria-click="prev-page">
		<% if page != 1 %>
			<i class="pe-7s-angle-left"></i>
		<% end %>
	</div>
	<div class="number">
		<span><%= page %>/<%= page_count %></span>
	</div>
	<div class="right" aria-click="next-page">
		<% if page != page_count %>
			<i class="pe-7s-angle-right"></i>
		<% end %>					
	</div>	
</div>
