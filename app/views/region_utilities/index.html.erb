<h1>Listing Region Utilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Options</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @region_utilities.each do |region_utility| %>
      <tr>
        <td><%= region_utility.name %></td>
        <td><%= region_utility.code %></td>
        <td><%= region_utility.options %></td>
        <td><%= link_to 'Show', region_utility %></td>
        <td><%= link_to 'Edit', edit_region_utility_path(region_utility) %></td>
        <td><%= link_to 'Destroy', region_utility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

