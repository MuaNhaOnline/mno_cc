<% 
=begin
	params: same_contact
=end

%>

<article class="box">
	<section class="box-header">
		<span class="box-title">
			Thông tin đã được sử dụng
		</span>
	</section>
	<section class="box-body">
		<p>
			Thông tin này đã được sử dụng với
		</p>
		<ul>
			<% if same_contact.name.present? %>
				<li>
					<p>
						Tên: <%= same_contact.name %>
					</p>
				</li>
			<% end %>
			<% if same_contact.email.present? %>
				<li>
					<p>
						Email: <%= same_contact.email %>
					</p>
				</li>
			<% end %>
			<% if same_contact.phone_number.present? %>
				<li>
					<p>
						Điện thoại: <%= same_contact.phone_number %>
					</p>
				</li>
			<% end %>
		</ul>
		<p>
			Đây có phải là bạn không?
		</p>
		<article class="text-center">
			<button aria-click="yes" class="btn btn-green">
				Phải, thay thế với thông tin cũ
			</button>
			<button aria-click="no" class="btn">
				Không, tôi sẽ nhập thông tin khác
			</button>
		</article>
	</section>
</article>