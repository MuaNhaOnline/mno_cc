<%
=begin
	params: @re
=end
%>

<section class="heading">
	<h3 class="title">
		<%= @re.block_group.name %>
		<span class="sub">
			<%= @re.short_label %>
		</span>
		<span class="sub">
			<%= @re.block_floor.name %>
		</span>
	</h3>
</section>

<section class="body">
	<article class="info list">
		<% if @re.bedroom_number.present? %>
			<article class="list-item">
				<span class="text">Phòng ngủ</span>
				<span class="value"><%= @re.bedroom_number %></span>
			</article>
		<% end %>
		<% if @re.restroom_number.present? %>
			<article class="list-item">
				<span class="text">Phòng tắm</span>
				<span class="value"><%= @re.restroom_number %></span>
			</article>
		<% end %>
		<% if @re.campus_area.present? %>
			<article class="list-item">
				<span class="text">Diện tích</span>
				<span class="value"><%= @re.campus_area %>m<sup>2</sup></span>
			</article>
		<% end %>
		<% if @re.direction_id.present? %>
			<article class="list-item">
				<span class="text">Hướng</span>
				<span class="value"><%= t "direction.text.#{@re.direction.name}" %></span>
			</article>
		<% end %>
	</article>
	
	<article class="info">
		Vị trí
		<ul>
			<% @re.in_floors.each do |floor_re| %>
				<li>
					<a aria-click="interact" data-type="real_estates/floor" data-value="<%= floor_re.id %>">
						Sàn <%= floor_re.floor %></a>
					<small><b>
						<% if floor_re.display_sell_price.present? %>
							<span class="sell-price-text">
								<%= floor_re.display_sell_price %>
							</span>
						<% end %>

						<%= '-' if floor_re.display_sell_price.present? && floor_re.display_rent_price.present? %>
						
						<% if floor_re.display_rent_price.present? %>
							<span class="rent-price-text">
								<%= floor_re.display_rent_price %>
							</span>
						<% end %>
					</b></small>
				</li>
			<% end %>
		</ul>
	</article>

	<article class="info">
		Các sản phẩm cùng nhóm
		<ul>
			<% @re.block_group.real_estates.each do |re| %>
				<%
					next if re.id == @re.id
				%>
				<li>
					<a aria-click="interact" data-type="real_estate" data-value="<%= re.id %>"><%= re.short_label %></a>
				</li>
			<% end %>
		</ul>
	</article>

	<article class="info">
		Các sản phẩm cùng sàn
		<ul>
			<% @re.block_floor.real_estates.each do |re| %>
				<%
					next if re.id == @re.id
				%>
				<li>
					<a aria-click="interact" data-type="real_estate" data-value="<%= re.id %>"><%= re.short_label %></a>
				</li>
			<% end %>
		</ul>
	</article>

</section>