<% 
  @title = t 'real_estate.view.my.page_title'
%>

<% content_for :stylesheets do %>
  <link rel="stylesheet" href="/assets/real_estates/my.css" />
<% end %>

<% content_for :scripts do %>
  <script type="text/javascript" src="/assets/real_estates/my.js"></script>
<% end %>

<% content_for :content_header do %>
  <%= t 'real_estate.view.my.form_title' %>
<% end %>

<%
  total = @res.count
  per = Rails.application.config.item_per_page
%>

<section class="box box-solid">
  <section class="box-body">
    <form id="search_form">
      <div class="input-group margin">
        <input name="keyword" type="text" class="form-control" placeholder="<%= t 'real_estate.view.my.search_placeholder' %>">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit"><%= t 'real_estate.view.my.search' %></button>
        </span>
      </div>
    </form>
  </section>
</section>

<section class="re-content">
  <article id="re_list" class="row">
    <% if total != 0 %>
      <%= render partial: 'real_estates/my_list', locals: { res: @res.page(1, per) } %>
    <% end %>
    <div><% if total == 0 %>Bạn chưa đăng tin nào<% end %></div>
  </article>
  <nav class="text-center" id="pagination">
    <% if total != 0 %>
      <%= render partial: 'shared/pagination', locals: { total: total, per: per } %>
    <% end %>
  </nav>
</section>