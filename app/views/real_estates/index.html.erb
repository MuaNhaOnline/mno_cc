<!-- start short property -->
<section class="container short-property block">
	<article class="title">
		<a href="#" class="link">
			<i class="fa fa-link"></i>
			<span>Tin nhanh</span>
		</a>
	</article>
	<article class="content">
		<%
			res = RealEstate.search_with_params(is_full: 'false').limit(6)
		%>
		<% res.each_with_index do |re, i| %>
			<% if i % 2 == 0 %>
				<ul class="row">
			<% end %>

			<div class="">
				<li class="item-xs">
					<div class="title" data-toggle-object="short_re_<%= re.id %>">
						<div class="date"><%= re.created_at.strftime '%d/%m/%y' %></div>
						<div class="text"><%= re.title %></div>
					</div>
					<div data-object="short_re_<%= re.id %>" style="display: none;">
						<div class="details">
							<div class="button">
								<a href="/real_estates/<%= re.id %>" class="btn btn-primary btn-sm">Xem</a>
							</div>
							<div class="text">
								<%= re.description %>
							</div>
						</div>
					</div>
				</li>
			</div>

			<% if i % 2 == 1 %>
				</ul>
			<% end %>			
		<% end %>
		<% if res.count % 2 == 1 %>
			</ul>
		<% end %>
	</article>
</section>
<!-- end short property -->

