<% res.each do |re| %>
  <!-- Get status -->
  <% 
    status = '';
    if re.is_draft
      status = 'draft '
    else
      if re.is_pending
        status = 'pending '
      end

      if re.is_show
        status += 'show'
      end
    end
  %>
  <article class="col-md-3 col-sm-4 col-xs-6">
    <article class="item" data-value="<%= re.id %>" data-status="<%= status %>">
      <section class="top">
        <%= real_estate_avatar re %>
        <section class="left">
          <article class="node">
            <span><b><%= ApplicationHelper.id_format re.id, 'RE'%></b></span>
          </article>
        </section>
        <section class="right" aria-name="status">
          <!-- <article class="node status-animation">
            <div class="text"><span>Chờ duyệt</span></div>
            <div class="fa fa-tag"></div>
          </article> -->
        </section>
      </section>
      <section class="bottom">
        <p class="title">
          <%= re.title %>
        </p>
        <p>
          <span class="fa fa-home"></span> <%= t 'real_estate_type.text.' + re.real_estate_type.name unless re.real_estate_type.nil? %>
        </p>
        <p>
          <span class="fa fa-tag"></span> <%= re.display_purpose %>
        </p>
        <p>
          <span class="fa fa-map-marker"></span> <%= re.display_address %>
        </p>
      </section>
      <section class="control">
        <span class="node">
          <a aria-click="change-show-status" href="javascript:void(0)" class="fa fa-lg"></a>
        </span>
        <span class="node">
          <a aria-click="edit" href="/real_estates/create/<%= re.id %>" class="fa fa-pencil fa-lg"></a>
        </span>
        <span class="node">
          <a aria-click="delete" href="javascript:void(0)" class="fa fa-trash-o fa-lg"></a>
        </span>
      </section>
    </article>
  </article>
<% end %>